<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/tv_nameOfMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tackle"
        android:textColor="#4f4f4f"
        android:textSize="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_levelLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:text="Level 1"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nameOfMove"></TextView>

    <ImageView
        android:id="@+id/img_typeOfMove"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/fairy"
        app:layout_constraintBottom_toBottomOf="@id/tv_levelLearn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_nameOfMove"></ImageView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#e3e3e3"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_levelLearn"
        app:layout_constraintRight_toRightOf="@id/img_typeOfMove"
        app:layout_constraintTop_toBottomOf="@id/tv_levelLearn"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>